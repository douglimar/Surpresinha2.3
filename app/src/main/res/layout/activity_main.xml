<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    tools:context="br.com.douglimar.surpresinha.br.com.ddmsoftware.surpresinha.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnMegasena"
                android:textColor="@color/colorWhite"
                android:text="@string/megasena"
                android:background="@color/colorMegasena"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnLotofacil"
                android:textColor="@color/colorWhite"
                android:text="@string/lotofacil"
                android:background="@color/colorLotofacil"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnDiaDeSorte"
                android:textColor="@color/colorWhite"
                android:text="@string/diadesorte"
                android:background="@color/colorDiaDeSorteDark"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnLotomania"
                android:text="@string/lotomania"
                android:textColor="@color/colorWhite"
                android:background="@color/colorLotomania"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnQuina"
                android:text="@string/quina"
                android:textColor="@color/colorWhite"
                android:background="@color/colorQuina"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnDuplaSena"
                android:textColor="@color/colorWhite"
                android:text="@string/duplasena"
                android:background="@color/colorDuplasena"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"/>

        </LinearLayout>
        </LinearLayout>


    <Button
        android:id="@+id/btnGooglePlay"
        android:textColor="@color/colorWhite"
        android:text="@string/btnGooglePlay"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="0dp"
        android:layout_weight="0.15"/>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewMain"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"/>

</LinearLayout>